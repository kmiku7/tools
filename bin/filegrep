import sys
import os

if len(sys.argv)!=3:
    print "Usage: %s fileName pattern" % os.path.basename(sys.argv[0])
    sys.exit("Invalid Arguments")

cmd = 'find . -name "%s"|xargs grep "%s"' % (sys.argv[1],sys.argv[2])
os.system(cmd)
